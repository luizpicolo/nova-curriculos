<div class="featured">
  <div class="grid">
    <div class="col-6 col-left">
      <section class="featured-item">
        <span class="nc-icon nc-recruiters"></span>
        <h2 class="featured-title">
          <strong>Recrutadores</strong>, 
          <%= link_to "cadastre", registration_candidates_path %> agora sua vaga, é 
          <strong>gratuito.</strong>
        </h2>
      </section>
    </div>

    <div class="col-6 col-right last">
      <section class="featured-item">
        <span class="nc-icon nc-candidate"></span>
        <h2 class="featured-title">
          <strong>Candidatos</strong>, 
          <%= link_to "cadastre", registration_recruiters_path %> seu currículo e 
          <strong>pague com um post</strong> no facebook
        </h2>
      </section>
    </div>
  </div>
</div>

<main id="main">
  <div class="search margin-bottom">
    <div class="grid">
      <form class="search-form" action="">
        <div class="form-input form-input-green">
          <label class="hidden" for="busca">Buscar vaga por região, empresa, descrição...</label>
          <input type="text" id="busca" name="busca" placeholder="buscar vaga por região, empresa, descrição..." required>
        </div>

        <div class="form-select form-select-green">
          <label class="hidden" for="area-atuacao">Área de atuação</label>
          <select name="area-atuacao" id="area-atuacao">
            <option value="opcao-1">opção 1</option>
            <option value="opcao-1">opção 2</option>
          </select>
        </div>

        <div class="search-submit">
          <input class="btn btn-green btn-large" type="submit" value="Buscar">
        </div>
      </form>
    </div>
  </div>

  <div class="vacancies margin-bottom">
    <div class="grid">
      <div class="clip">
        <ul class="vacancies-list">
          <% @jobs.each do |job| %>
          <% job.job_premiun ? premiun = "vacancies-premium" : premiun = "" %>
          <li class="vacancies-item <%= premiun %>">
            <section>
              <%= link_to opportunities_path(job.slug), :class => "vacancies-link" do %>
                <h2 class="vacancies-category"><%= job.category.name %></h2>
                <h1 class="vacancies-title"><%= job.job_title %></h1>                  
                <p class="vacancies-enterprise">
                  <span class="fa fa-briefcase"></span> <%= job.company.corporate_name %>
                </p>
                <p class="vacancies-location">
                  <span class="fa fa-map-marker"></span> <%= job.company.city.name %> / <%= job.company.city.state.iso %>
                </p>
              <% end %>

              <a class="vacancies-social" href="#">
                <span class="fa fa-facebook-square"></span> Recomende esta Vaga
              </a>
            </section>
          </li>
          <% end %>
        </ul>
      </div>

      <a class="btn btn-bright-green btn-block btn-extra" href="#">Ver mais vagas</a>
    </div>
  </div>
</main>
