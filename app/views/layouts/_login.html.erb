<div class="login">
  <div class="grid">
    <span class="login-title">Login</span>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'login-form' }) do |f| %>
      <div class="login-input">
        <%= f.label :email, :class => "hidden" %>
        <%= f.text_field :email, required: false, autofocus: true, :placeholder => "email"  %>
      </div>

      <div class="login-input">
        <%= f.label :password, :class => "hidden" %>
        <%= f.password_field :password, required: false, :placeholder => "senha" %>
      </div>

      <div class="login-submit">
        <%= f.submit "Entrar", :class => "btn btn-blue" %>
      </div>
    <% end %>

    <%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-facebook" do %>
      <span class="fa fa-facebook"></span> Login com Facebook
    <% end %>

    <%= link_to "Esqueceu sua senha?", new_user_password_path, :class => "btn btn-link"%>
  </div>
</div>
