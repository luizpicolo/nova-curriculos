<div class="logged">
  <div class="grid-relative">
    <div class="logged-info">
      <span class="logged-message">Seja bem vindo (a)</span>
      <span class="logged-avatar">
        <% if current_user.candidate.try(:image) %>
          <%= link_to curriculum_candidate_path do %>
          <%= image_tag current_user.candidate.image.thumb_min %>
          <% end %>
        <% end %>
      </span>
      <span class="logged-name"><%= current_user.name %></span>
    </div>

    <div class="logged-nav">
      <ul>
        <% if current_user.admin? %>
        <li><%= link_to "Admin", rails_admin_path, :class => "btn btn-link" %></li>
        <% end %>
        <% if current_user.is_company? %>
        <li><a class="btn btn-link" href="#">Perfil empresa</a></li>
        <li><%= link_to "Cadastrar vaga", new_vacancy_path, :class => "btn btn-link"%></li>
        <% else %>
        <li><%= link_to "CurrÃ­culo", show_curriculum_candidate_path, :class => "btn btn-link" %></li>
        <% end %>
        <li><a class="btn btn-link" href="#">Trocar senha</a></li>
        <li>
          <%= link_to "Sair", destroy_user_session_path, :method => :delete, :class => "btn btn-link" %></li>
      </ul>
    </div>
  </div>
</div>
