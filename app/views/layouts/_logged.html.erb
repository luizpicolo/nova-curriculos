<div class="logged">
  <div class="grid-relative">
    <div class="logged-info">
      <span class="logged-message">Seja bem vindo (a)</span>
      <span class="logged-avatar"></span>
      <span class="logged-name"><%= current_user.name %></span>
    </div>

    <div class="logged-nav">
      <ul>
        <% if current_user.admin? %>
        <li><%= link_to "Admin", rails_admin_path, :class => "btn btn-link" %></li>
        <% end %>
        <li><a class="btn btn-link" href="#">Meu Perfil</a></li>
        <li><a class="btn btn-link" href="#">Trocar senha</a></li>
        <li>
          <%= link_to "Sair", destroy_user_session_path, :method => :delete, :class => "btn btn-link" %></li>
      </ul>
    </div>
  </div>
</div>