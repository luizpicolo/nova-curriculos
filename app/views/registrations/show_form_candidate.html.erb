<main id="main">
  <div class="grid padding-top">
    <section>
      <div class="page-title-container">
        <h1 class="page-title">
          <span class="nc-min-icon nc-min-candidate"></span> 
          <span>Cadastro do Candidato</span>
        </h1>
      </div>

      <div class="col-5 col-center text-center">
        <div class="page-slogan">
          <div class="page-slogan-text">
            <p>
              Que tal agilizar as coisas? <br>
              Faça <a href="#">cadastro com facebook</a> e pule <br>
              essa etapa! =)
            </p>
          </div>

          <a class="btn btn-facebook" href="#">
            <span class="fa fa-facebook"></span> Cadastro com Facebook
          </a>
        </div>

        <div class="margin-bottom">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="form-input form-input-green">
              <%= f.input :name, required: true, autofocus: true, label: false, :placeholder => "Nome*" %>
            </div>

            <div class="form-input form-input-green">
              <%= f.input :email, required: true, autofocus: true, label: false, :placeholder => "E-mail*" %>
            </div>

            <div class="form-input form-input-green">
               <%= f.input :password, required: true, label: false, :placeholder => "senha*" %>
            </div>

            <div class="form-input form-input-green">
              <%= f.input :password_confirmation, required: true, label: false, :placeholder => "Confirmar senha*" %>
            </div>

            <div class="form-rules">
              *Itens obrigatórios
            </div>

            <div class="form-submit">
              <%= f.input :is_candidate, :as => :hidden, :input_html => { :value => "1" }%>
              <%= f.button :submit, "Cadastrar", :class => "btn btn-blue" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</main>
