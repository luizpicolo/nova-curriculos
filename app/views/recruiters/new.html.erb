<main id="main">
  <div class="grid padding-top">
    <section>
      <div class="page-title-container">
        <h1 class="page-title">
          <span class="nc-min-icon nc-min-recruiters"></span> 
          <span>Cadastro do Recrutador</span>
        </h1>
      </div>

      <div class="col-5 col-center text-center">
        <div class="page-slogan">
          <p>
            Encontre muito mais <br>
            candidatos para suas vagas
          </p>
        </div>

        <div class="margin-bottom">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-input form-input-green">
              <%= f.input :name, required: true, autofocus: true, label: false, :placeholder => "Nome*", :input_html => { :id => "user_name_r" } %>
            </div>

            <div class="form-input form-input-green">
              <%= f.input :email, required: true, autofocus: true, label: false, :placeholder => "E-mail*", :input_html => { :id => "user_email_r" } %>
            </div>

            <div class="form-input form-input-green">
               <%= f.input :password, required: true, label: false, :placeholder => "senha*", :input_html => { :id => "user_password_r" } %>
            </div>

            <div class="form-input form-input-green">
              <%= f.input :password_confirmation, required: true, label: false, :placeholder => "Confirmar senha*", :input_html => { :id => "user_password_confirmation_r" } %>
            </div>

            <div class="form-rules">
              *Itens obrigat√≥rios
            </div>

            <div class="form-submit">
              <%= f.input :is_candidate, :as => :hidden, :input_html => { :value => "0" }%>
              <%= f.button :submit, "Cadastrar", :class => "btn btn-blue" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</main>